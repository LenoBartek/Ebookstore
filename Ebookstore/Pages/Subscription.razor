@page "/subscription"
@using Blazorise

@switch (State)
{
	case PageState.Add:
		<div class="alert alert-secondary mb-4 " role="alert">
			<div class="row">
				<div class="col-md-1">
					<button type="button" class="btn btn-secondary" @onclick="BackToMySubscriptions">Back</button>
				</div>
				<div class="col-md-5 text-right">
					<button class="btn btn-primary" @onclick="AddToSubscr">Add to subscription</button>
				</div>
			</div>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Authors</th>
					<th scope="col">Title</th>
					<th scope="col">Year</th>
					<th scope="col">
						Do
					</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in EBooksStoreList)
				{
					<tr>
						<td>@item.id</td>
						<td>@item.authors</td>
						<td>@item.title</td>
						<td>@item.publication_year</td>
						<td>
							<button type="button" class="btn btn-link p-0" @onclick="@(() => ViewEbookPdf(item))">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer" viewBox="0 0 16 16">
									<path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z" />
									<path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2H5zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4V3zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2H5zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1z" />
								</svg>
							</button>
						</td>
						<td>
							<Check TValue="bool" Checked="item.IsChecked" CheckedChanged="(() => OnCheckChanged(item))"></Check>
						</td>


					</tr>
				}
			</tbody>
		</table>

		break;
	case PageState.Edit:
		break;
	case PageState.Del:
		break;
	case PageState.Preview:
		<div class="alert alert-secondary mb-3 " role="alert">
			<button type="button" class="btn btn-secondary" @onclick="OnClosePdf">Close</button>
		</div>
		<div class="mb-3 row text-right">
			<embed src="./ebooks/GetPdf?fileName=@_filename" width="800px" height="2100px" />
		</div>
		break;
	default:
		<div class="alert alert-secondary mb-4 " role="alert">
			<div class="row">
				<div class="col-md-1">
					<button type="button" class="btn btn-secondary">Back</button>
				</div>
				<div class="col-md-5 text-right">
					<button class="btn btn-primary" @onclick="AddEbooks">Add</button>
				</div>
			</div>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Authors</th>
					<th scope="col">Title</th>
					<th scope="col">Subscr. date</th>
					<th scope="col">Do</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in ShelfList)
				{
					<tr>
						<td>@item.id</td>
						<td>@item.authors</td>
						<td>@item.title</td>
						<td>@item.created_date.ToString("yyyy-MM-dd")</td>
						<td>
							<button type="button" class="btn btn-link p-0" @onclick="@(() => ViewPdf(item))">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer" viewBox="0 0 16 16">
									<path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z" />
									<path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2H5zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4V3zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2H5zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1z" />
								</svg>
							</button>
							<button type="button" class="btn btn-link p-0" @onclick="@(() => OnRowDelete(item))">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
									<path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
								</svg>
							</button>
						</td>
					</tr>
				}
			</tbody>
		</table>
		break;
}